{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Column": {
            "properties": {
                "name": {
                    "description": "Column Name",
                    "type": "string"
                },
                "provider": {
                    "$ref": "#/definitions/ProviderType"
                }
            },
            "required": [
                "name",
                "provider"
            ],
            "type": "object"
        },
        "ProviderType": {
            "enum": [
                "const",
                "fake",
                "mask",
                "scramble"
            ],
            "type": "string"
        },
        "Table": {
            "properties": {
                "columns": {
                    "items": {
                        "$ref": "#/definitions/Column"
                    },
                    "type": "array"
                },
                "name": {
                    "description": "Table name",
                    "type": "string"
                }
            },
            "required": [
                "columns",
                "name"
            ],
            "type": "object"
        }
    },
    "properties": {
        "tables": {
            "description": "Tables to be processed",
            "items": {
                "$ref": "#/definitions/Table"
            },
            "type": "array"
        }
    },
    "type": "object"
}

