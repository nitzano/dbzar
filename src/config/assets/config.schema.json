{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "Column": {
            "additionalProperties": false,
            "properties": {
                "name": {
                    "description": "Column Name",
                    "type": "string"
                },
                "provider": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/FakeProvider"
                        },
                        {
                            "$ref": "#/definitions/MaskProvider"
                        },
                        {
                            "enum": [
                                "const",
                                "fake",
                                "mask",
                                "remove",
                                "scramble"
                            ],
                            "type": "string"
                        }
                    ]
                }
            },
            "required": [
                "name",
                "provider"
            ],
            "type": "object"
        },
        "FakeOptions": {
            "additionalProperties": false,
            "properties": {
                "fakeValue": {
                    "$ref": "#/definitions/FakeType"
                }
            },
            "required": [
                "fakeValue"
            ],
            "type": "object"
        },
        "FakeProvider": {
            "additionalProperties": false,
            "properties": {
                "options": {
                    "$ref": "#/definitions/FakeOptions"
                },
                "type": {
                    "enum": [
                        "fake"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "type": "object"
        },
        "FakeType": {
            "enum": [
                "age",
                "animal",
                "first",
                "firstName",
                "last",
                "lastName",
                "letter",
                "name",
                "word"
            ],
            "type": "string"
        },
        "MaskOptions": {
            "additionalProperties": false,
            "properties": {
                "character": {
                    "type": "string"
                },
                "excludeCharacters": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "excludeEndCount": {
                    "type": "number"
                },
                "excludeStartCount": {
                    "type": "number"
                }
            },
            "required": [
                "character"
            ],
            "type": "object"
        },
        "MaskProvider": {
            "additionalProperties": false,
            "properties": {
                "options": {
                    "$ref": "#/definitions/MaskOptions"
                },
                "type": {
                    "enum": [
                        "mask"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "type": "object"
        },
        "Table": {
            "additionalProperties": false,
            "properties": {
                "columns": {
                    "description": "Tables to be processed",
                    "items": {
                        "$ref": "#/definitions/Column"
                    },
                    "minItems": 1,
                    "type": "array"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "type": "object"
        }
    },
    "properties": {
        "name": {
            "type": "string"
        },
        "tables": {
            "description": "Tables to be processed",
            "items": {
                "$ref": "#/definitions/Table"
            },
            "minItems": 1,
            "type": "array"
        }
    },
    "required": [
        "name"
    ],
    "type": "object"
}

